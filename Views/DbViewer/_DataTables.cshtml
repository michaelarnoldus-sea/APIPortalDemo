@model APIPortal.Models.DbViewerViewModel

<div class="mb-2 text-end">
    <small class="text-muted">Last updated: @Model.LastRefresh UTC</small>
</div>

<!-- API Keys Table -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
                <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z"/>
                <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
            </svg>
            API Keys (@Model.ApiKeys.Count)
        </h5>
    </div>
    <div class="card-body">
        @if (Model.ApiKeys.Count == 0)
        {
            <p class="text-muted text-center py-3">No API keys in database</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Prefix</th>
                            <th>Key Hash (SHA-256)</th>
                            <th>Preview</th>
                            <th>Scopes</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Expires</th>
                            <th>Revoked</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var key in Model.ApiKeys)
                        {
                            <tr class="@(key.IsActive ? "" : "table-secondary")">
                                <td>@key.Id</td>
                                <td><span class="badge bg-info">@key.Username</span></td>
                                <td><code>@key.KeyPrefix</code></td>
                                <td><small class="text-monospace text-muted">@key.KeyHashPreview</small></td>
                                <td><code>...@key.KeyPreview</code></td>
                                <td><small>@key.Scopes</small></td>
                                <td>
                                    @if (key.Status == "Active")
                                    {
                                        <span class="badge bg-success">@key.Status</span>
                                    }
                                    else if (key.Status == "Expired")
                                    {
                                        <span class="badge bg-warning text-dark">@key.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@key.Status</span>
                                    }
                                </td>
                                <td><small>@key.CreatedAt.ToString("MM/dd HH:mm")</small></td>
                                <td><small>@key.ExpiresAt.ToString("MM/dd HH:mm")</small></td>
                                <td>
                                    @if (key.RevokedAt.HasValue)
                                    {
                                        <small class="text-danger">@key.RevokedAt.Value.ToString("MM/dd HH:mm")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">â€”</small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Users Table -->
<div class="card mb-4">
    <div class="card-header bg-secondary text-white">
        <h5 class="mb-0">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-people" viewBox="0 0 16 16">
                <path d="M15 14s1 0 1-1-1-4-5-4-5 3-5 4 1 1 1 1h8Zm-7.978-1A.261.261 0 0 1 7 12.996c.001-.264.167-1.03.76-1.72C8.312 10.629 9.282 10 11 10c1.717 0 2.687.63 3.24 1.276.593.69.758 1.457.76 1.72l-.008.002a.274.274 0 0 1-.014.002H7.022ZM11 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm3-2a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM6.936 9.28a5.88 5.88 0 0 0-1.23-.247A7.35 7.35 0 0 0 5 9c-4 0-5 3-5 4 0 .667.333 1 1 1h4.216A2.238 2.238 0 0 1 5 13c0-1.01.377-2.042 1.09-2.904.243-.294.526-.569.846-.816ZM4.92 10A5.493 5.493 0 0 0 4 13H1c0-.26.164-1.03.76-1.724.545-.636 1.492-1.256 3.16-1.275ZM1.5 5.5a3 3 0 1 1 6 0 3 3 0 0 1-6 0Zm3-2a2 2 0 1 0 0 4 2 2 0 0 0 0-4Z"/>
            </svg>
            Users (@Model.Users.Count)
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-sm table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Password Hash (PBKDF2)</th>
                        <th>Salt</th>
                        <th>Created</th>
                        <th>API Keys</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td><strong>@user.Username</strong></td>
                            <td><small class="text-monospace text-muted">@user.PasswordHashPreview</small></td>
                            <td><small class="text-monospace text-muted">@user.SaltPreview</small></td>
                            <td><small>@user.CreatedAt.ToString("yyyy-MM-dd")</small></td>
                            <td><span class="badge bg-secondary">@user.ApiKeyCount</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <!-- Scopes Table -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-shield-check" viewBox="0 0 16 16">
                        <path d="M5.338 1.59a61.44 61.44 0 0 0-2.837.856.481.481 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.725 10.725 0 0 0 2.287 2.233c.346.244.652.42.893.533.12.057.218.095.293.118a.55.55 0 0 0 .101.025.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z"/>
                        <path d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                    </svg>
                    Scopes (@Model.Scopes.Count)
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var scope in Model.Scopes)
                            {
                                <tr>
                                    <td>@scope.Id</td>
                                    <td><code>@scope.Name</code></td>
                                    <td><small>@scope.Description</small></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- DataProtection Keys Table -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"/>
                    </svg>
                    DataProtection Keys (@Model.DataProtectionKeys.Count)
                </h5>
            </div>
            <div class="card-body">
                @if (Model.DataProtectionKeys.Count == 0)
                {
                    <p class="text-muted text-center py-3">No encryption keys stored yet</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Encrypted XML</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var key in Model.DataProtectionKeys)
                                {
                                    <tr>
                                        <td>@key.Id</td>
                                        <td><small>@key.FriendlyName</small></td>
                                        <td><small class="text-monospace text-muted">@key.XmlPreview</small></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                <div class="alert alert-info mb-0 mt-2">
                    <small>
                        <strong>Note:</strong> These keys encrypt your authentication cookies and persist across container restarts.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
